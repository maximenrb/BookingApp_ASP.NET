@model BookingApp.Models.Offer

@{
    ViewData["Title"] = "Details";
}

<div class="card main-card">

    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            @for (int i = 0; i < Model.Accommodation.Pictures.Count; i++)
            {
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i"
                        @if (i == 0) { @: class="active" aria-current="true"
                        } aria-label="Slide @i"></button>
            }
        </div>

        <div class="carousel-inner">
            @{ var firstImg = true;
                foreach (Picture picture in Model.Accommodation.Pictures)
                {
                    <div class="carousel-item @if (firstImg) {
                        @:active
                        firstImg = false; }">

                        <img src="~/upload/@picture.FileName" class="d-block w-100 card-img-top" style="object-fit: cover; width: 100%; height: 450px;" alt="">
                    </div>
                }
            }
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div class="card-body">

        <div class="container">
            <div class="row">

                <div class="col-sm-8">
                    <h3 class="card-title">
                        @Model.Accommodation.Name
                    </h3>

                    <hr class="solid">

                    <div class="d-grid gap-1">
                        <div class="p-1">
                            <h5 style="display:inline;"><i class="bi bi-house-door"></i></h5>
                            <h6 style="display:inline;">@Model.Accommodation.Type</h6>
                        </div>

                        <div class="p-1">
                            <h5 style="display:inline;"><i class="bi bi-geo-alt"></i></h5>
                            <h6 style="display:inline;">@Model.Accommodation.Address.ShortAddress()</h6>
                        </div>

                        <div class="p-1">
                            <h5 style="display:inline;"><i class="bi bi-file-text"></i></h5>
                            <p class="card-text" style="display:inline;">@Model.Accommodation.Description</p>
                        </div>
                    </div>

                    <hr class="solid">

                    <h4>Pièce(s) [@Model.Accommodation.Rooms.Count] :</h4>

                    @foreach (var item in Model.Accommodation.Rooms)
                    {
                        <div class="card" style="margin-bottom:1em;">
                            <div class="card-body">
                                @{ string iconSrc = item.RoomType.ToString().ToLower() + ".svg"; }

                                <h5 class="card-title">
                                    <img src="~/svg/@iconSrc" alt="Room icon" height="20px" width="20px" style="vertical-align: -3px;" />
                                    @TypeTranslate.ToFr(Enum.GetName(typeof(RoomTypes), item.RoomType))
                                </h5>

                                <p class="card-text">
                                    <b>Équipements: </b>
                                    @item.AmenitiesStr()
                                </p>
                            </div>
                        </div>
                    }

                    <hr class="solid">

                    <h4>Règlement du logement :</h4>

                    <div class="d-grid gap-1">
                        <div class="p-1">
                            <img src="~/svg/clock.svg" alt="Clock icon" height="20px" width="20px" style="vertical-align: -4px; margin-right:3px;" />
                            <h6 style="display:inline;">
                                Heure d'arrivée : Après @Model.Accommodation.HouseRules.ArrivalHour - Heure de départ : Avant @Model.Accommodation.HouseRules.DepartureHour
                            </h6>
                        </div>

                        <div class="p-1">
                            <img src="~/svg/pet.svg" alt="Pet icon" height="20px" width="20px" style="vertical-align: -4px; margin-right:3px;" />
                            <h6 style="display:inline;">Animaux autorisés : @Model.Accommodation.HouseRules.PetAllowed</h6>
                        </div>

                        <div class="p-1">
                            <img src="~/svg/party.svg" alt="Party icon" height="20px" width="20px" style="vertical-align: -4px; margin-right:3px;" />
                            <h6 style="display:inline;">Fêtes autorisées : @Model.Accommodation.HouseRules.PartyAllowed</h6>
                        </div>

                        <div class="p-1">
                            <img src="~/svg/smoke.svg" alt="Smoke icon" height="20px" width="20px" style="vertical-align: -4px; margin-right:3px;" />
                            <h6 style="display:inline;">Logement fumeur : @Model.Accommodation.HouseRules.SmokeAllowed</h6>
                        </div>
                    </div>

                </div>

                <div class="col-sm-4">
                    <div class="card shadow p-3 mb-5 bg-body rounded">
                        <div class="card-header">
                            <h5 class="card-title">Réservation</h5>
                        </div>
                        <div class="card-body">

                            <div class="d-grid gap-1">
                                <div class="p-1">
                                    <h6 style="display:inline;"><i class="bi bi-cash"></i></h6>
                                    <h6 style="display:inline;">Prix par nuit : @Model.PricePerNight €</h6>
                                </div>

                                <div class="p-1">
                                    <h6 style="display:inline;"><i class="bi bi-bucket"></i></h6>
                                    <h6 style="display:inline;">Frais de ménage : @Model.CleaningFee €</h6>
                                </div>
                            </div>

                            <hr class="solid">

                            <p class="card-text">Sélectionnez vos dates de réservations :</p>

                            <form asp-controller="Booking" asp-action="Create">
                                <input type="hidden" asp-for="Id" name="OfferId"/>

                                <div class="row g-3" style="margin-bottom: 0.5em;">
                                    <div class="col col-md-7">
                                        <label for="inputArrivalDate">Arrivé</label>
                                        <input type="date" class="form-control" id="inputArrivalDate" name="ArrivalDate"
                                               min="" max="" required>
                                    </div>

                                    <div class="col col-md-5">
                                        <label for="inputArrivalTime">Heure</label>
                                        <input type="time" class="form-control" id="inputArrivalTime" name="ArrivalTime"
                                               min="" max="23:59" required>
                                    </div>
                                </div>

                                <div class="row g-3" style="margin-bottom: 0.5em;">
                                    <div class="col col-md-7">
                                        <label for="inputDepartureDate">Départ</label>
                                        <input type="date" class="form-control" id="inputDepartureDate" name="DepartureDate"
                                               min="" max="" required>
                                    </div>

                                    <div class="col col-md-5">
                                        <label for="inputDepartureTime">Heure</label>
                                        <input type="time" class="form-control" id="inputDepartureTime" name="DepartureTime"
                                               min="00:00" max="" required>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="nbPersonSelector">Nombre de voyageur(s)</label>
                                    <select class="form-control form-select" id="nbPersonSelector" name="NbPerson" required>
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <option>@i</option>
                                        }
                                    </select>
                                </div>

                                <div class="d-grid gap-2">
                                    <button class="btn btn-success" type="submit">Réserver</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>