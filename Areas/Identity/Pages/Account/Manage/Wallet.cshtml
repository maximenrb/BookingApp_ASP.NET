@page
@model WalletModel
@{
    ViewData["Title"] = "Portefeuille Numérique";
    ViewData["ActivePage"] = ManageNavPages.Wallet;
}

<h4>@ViewData["Title"]</h4>

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row">
    <div class="col-md-6">

        <h5>Solde du compte : @Model.AccountBalance €</h5>

        <form asp-page-handler="CreditAccount" class="form-inline">
            <label class="sr-only" for="inputAmount">Montant</label>

            <div class="input-group mb-3">
                <input asp-for="@Model.Input.CreditAmount" type="text" class="form-control" min="1">
                <span class="input-group-text">€</span>
            </div>

            <button class="btn btn-success" type="submit">Créditer</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
